/* General Styles */
body {
    -fx-background-color: #ffffff; /* Set white background */
    -fx-min-height: 100vh;
    -fx-font-family: "Times New Roman", serif; /* Global font style */
}

/* Label Styles */
.label {
    -fx-font-family: "Times New Roman", serif;
    -fx-font-size: 22px;
    -fx-text-fill: #000000; /* Black text */
    -fx-effect: dropshadow(gaussian, lightgray, 3, 0.5, 1, 1); /* Subtle shadow */
    -fx-font-weight: bold; /* Add boldness for a refined look */
}

/* Hover Effect for Labels */
.label:hover {
    -fx-text-fill: #000000; /* No color change */
    -fx-effect: dropshadow(gaussian, #000000, 3, 0.8, 1, 1); /* Shadow remains black */
    -fx-cursor: pointer; /* Pointer on hover */
}

/* TextField Styles */
.text-field {
    -fx-prompt-text-fill: #808080; /* Placeholder text color */
    -fx-border-color: #000000; /* Black border */
    -fx-border-radius: 5;
    -fx-background-radius: 5;
    -fx-padding: 5 10;
    -fx-font-size: 14px;
    -fx-transition: all 0.3s ease;
    -fx-background-color: #f5f5f5; /* Light gray background */
}

/* Focus Effect for TextFields */
.text-field:focused {
    -fx-border-color: #000000; /* Black border on focus */
    -fx-effect: dropshadow(gaussian, #000000, 3, 0.8, 1, 1); /* Black shadow */
    -fx-background-color: #ffffff; /* White background when focused */
}

/* ComboBox Styles */
.combo-box {
    -fx-background-color: #FBFBFB;
    -fx-background-radius: 23;
    -fx-border-color: #000000;
    -fx-border-radius: 8;
    -fx-padding: 3 10;
    -fx-font-size: 14px;
}

/* TableView Styles */
.table-view {
    -fx-border-color: #000000;
    -fx-border-radius: 10;
    -fx-background-color: #ffffff;
    -fx-padding: 5;
}

.table-column {
    -fx-background-color: #eeeeee;
    -fx-text-fill: #000000;
    -fx-font-family: "Serif Bold Italic";
    -fx-font-size: 14px;
    -fx-font-weight: bold;
}

.table-view .table-row-cell:hover {
    -fx-background-color: #e0e0e0; /* Light gray for hover effect */
    -fx-text-fill: #000000;
}

/* Image View */
.image-view {
    -fx-effect: dropshadow(gaussian, gray, 3, 0.8, 1, 1); /* Subtle shadow */
}

/* Focus Effect for Image Views */
.image-view:focused {
    -fx-effect: dropshadow(gaussian, #000000, 5, 0.8, 2, 2); /* Darker shadow when focused */
}

/* Employee Text Style */
.employeetxt {
    -fx-font-family: "Times New Roman Bold";
    -fx-font-size: 35px;
    -fx-font-weight: bold;
    -fx-text-fill: #000000; /* Black text color */
    -fx-effect: dropshadow(gaussian, #ffffff, 5, 0.8, 2, 2); /* White shadow */
}

/* General Text Style */
.txt {
    -fx-font-family: "Times New Roman Bold";
